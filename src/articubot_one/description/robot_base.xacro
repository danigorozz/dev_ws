<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro">

    <xacro:include filename="robot_essentials.xacro"/>

    <link name="base_link">
        <visual>
            <origin xyz="0 0 0" rpy="1.5707963267949 0 3.14"/>
            <geometry>
                <!-- <mesh filename="package://articubot_one/meshes/robot_base.stl"/> -->
                <box size="0.65 0.2 0.4"/>
            </geometry>
            <material name="">
                <color rgba="0.79216 0.81961 0.93333 1"/>
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0.05" rpy="1.5707963267949 0 3.14"/>
            <geometry>
                <box size="0.650 0.200 0.400"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="47" x="0.650" y="0.200" z="0.400">
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <!-- Ruedas -->
    <!-- <xacro:robot_wheel prefix="front_left"/>
    <xacro:robot_wheel prefix="front_right"/>
    <xacro:robot_wheel prefix="rear_left"/>
    <xacro:robot_wheel prefix="rear_right"/> -->

    <!-- Articulaciones de ruedas -->
    <!-- <xacro:wheel_joint prefix="front_left" origin="0.220 0.250 0"/>
    <xacro:wheel_joint prefix="front_right" origin="0.220 -0.250 0"/>
    <xacro:wheel_joint prefix="rear_left" origin="-0.220 0.250 0"/>
    <xacro:wheel_joint prefix="rear_right" origin="-0.220 -0.250 0"/> -->

    <!-- WHEELS -->
    <!-- Fron left wheel -->
    <link name="front_left_wheel">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <!-- <mesh filename="package://articubot_one/meshes/wheel.stl" /> -->
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <material name="">
                <color rgba="0.79216 0.81961 0.93333 1" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.1" length="0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="2" length="0.1" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="front_left_wheel_joint" type="continuous">
        <axis xyz="0 0 1"/>
        <parent link ="base_link"/>
        <child link ="front_left_wheel"/>
        <origin rpy ="${-pi/2} 0 0" xyz= "0.220 0.250 0"/>
    </joint>

  <!-- Front right wheel -->
    <link name="front_right_wheel">
        <visual>
            <origin
            xyz="0 0 0"
            rpy="0 0 0" />
            <geometry>
                <!-- <mesh filename="package://articubot_one/meshes/wheel.stl" /> -->
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <material name="">
                <color rgba="0.79216 0.81961 0.93333 1" />
            </material>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0" />
            <geometry>
                <cylinder radius="0.1" length="0.1"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="2" length="0.1" radius="0.1">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <joint name="front_right_wheel_joint" type="continuous">
        <axis xyz="0 0 -1"/>
        <parent link ="base_link"/>
        <child link ="front_right_wheel"/>
        <origin rpy ="${pi/2} 0 0" xyz= "0.220 -0.250 0"/>
    </joint>

  <!-- Rear left wheel -->
    <link name="rear_left_wheel">
        <visual>
            <origin
            xyz="0 0 0"
            rpy="0 0 0" />
            <geometry>
                <!-- <mesh filename="package://articubot_one/meshes/wheel.stl" /> -->
